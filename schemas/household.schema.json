{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "household.schema.json",
  "title": "HouseholdProfile",
  "description": "Shared corpus: household demographics and Social Security configuration.",
  "type": "object",
  "required": ["_type", "maritalStatus", "filingStatus", "stateOfResidence", "primary"],
  "properties": {
    "_type": { "const": "household" },
    "maritalStatus": { "type": "string", "enum": ["single", "married"] },
    "filingStatus": { "type": "string", "enum": ["single", "mfj", "survivor"] },
    "stateOfResidence": { "type": "string", "enum": ["AL","AK","AZ","AR","CA","CO","CT","DE","FL","GA","HI","ID","IL","IN","IA","KS","KY","LA","ME","MD","MA","MI","MN","MS","MO","MT","NE","NV","NH","NJ","NM","NY","NC","ND","OH","OK","OR","PA","RI","SC","SD","TN","TX","UT","VT","VA","WA","WV","WI","WY","DC"] },
    "primary": { "$ref": "#/$defs/personProfile" },
    "spouse": { "$ref": "#/$defs/personProfile" }
  },
  "additionalProperties": false,
  "allOf": [
    {
      "if": { "properties": { "maritalStatus": { "const": "married" } }, "required": ["maritalStatus"] },
      "then": { "required": ["_type", "maritalStatus", "filingStatus", "stateOfResidence", "primary", "spouse"] }
    },
    {
      "if": { "properties": { "filingStatus": { "const": "mfj" } }, "required": ["filingStatus"] },
      "then": { "properties": { "maritalStatus": { "const": "married" } }, "required": ["_type", "maritalStatus", "filingStatus", "stateOfResidence", "primary", "spouse"] }
    },
    {
      "if": { "properties": { "maritalStatus": { "const": "single" } }, "required": ["maritalStatus"] },
      "then": { "not": { "required": ["spouse"] } },
      "description": "Single households cannot have a spouse"
    }
  ],
  "$defs": {
    "personProfile": {
      "type": "object",
      "required": ["id", "birthYear", "currentAge", "retirementAge", "lifeExpectancy"],
      "properties": {
        "id": { "type": "string", "enum": ["primary", "spouse"] },
        "birthYear": { "type": "integer", "minimum": 1900, "maximum": 2100 },
        "currentAge": { "type": "integer", "minimum": 0, "maximum": 120 },
        "retirementAge": { "type": "integer", "minimum": 0, "maximum": 120 },
        "lifeExpectancy": { "type": "integer", "minimum": 1, "maximum": 120, "description": "Must be >= currentAge and >= retirementAge" },
        "socialSecurity": {
          "type": "object",
          "required": ["claimAge", "estimatedMonthlyBenefitAtClaim", "colaPct"],
          "properties": {
            "claimAge": { "type": "integer", "minimum": 62, "maximum": 70 },
            "piaMonthlyAtFRA": { "type": "number", "minimum": 0 },
            "estimatedMonthlyBenefitAtClaim": { "type": "number", "minimum": 0 },
            "colaPct": { "type": "number", "minimum": -100, "maximum": 100 }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    }
  }
}
